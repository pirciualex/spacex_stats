        "express": "^4.17.1",
        "graphql": "^15.4.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/graphql": "^14.5.0",
        "@types/node": "^14.14.16",
        "nodemon": "^2.0.6",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
